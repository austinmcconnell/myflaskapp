{
    "configurations": [
        {
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "justMyCode": false,
            "name": "Python: Remote Attach",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ],
            "request": "attach",
            "type": "debugpy"
        },
        {
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "env": {
                "FLASK_APP": "wsgi.py",
                "FLASK_DEBUG": "1"
            },
            "jinja": true,
            "justMyCode": true,
            "module": "flask",
            "name": "Python: Flask",
            "request": "launch",
            "type": "debugpy"
        }
    ]
}
